<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_whole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/default_image_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_info"
        />

    <TextView
        android:id="@+id/list_item_first_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/list_item_icon"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/list_item_icon"
        android:layout_toRightOf="@+id/list_item_icon"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_icon"
        app:layout_constraintLeft_toRightOf="@+id/list_item_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/list_item_icon"/>
</android.support.constraint.ConstraintLayout>